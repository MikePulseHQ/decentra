      "h2": "16px",
      "h3": "16px",
      "h4": "12px",
      "body": "16px",
      "small": "14px",
      "label": "12px"
    },
    "weights": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "20px",
    "xl": "32px"
  },
  "borderRadius": {
    "small": "3px",
    "medium": "4px",
    "large": "5px"
  },
  "screens": [
    {
      "name": "Login Screen",
      "route": "/",
      "file": "index.html",
      "layout": {
        "type": "centered",
        "width": "400px",
        "background": "#5865F2"
      },
      "components": [
        {
          "type": "container",
          "className": "auth-box",
          "width": "400px",
          "padding": "32px",
          "background": "#36393f",
          "borderRadius": "5px",
          "shadow": "0 2px 10px 0 rgba(0, 0, 0, 0.2)",
          "children": [
            {
              "type": "text",
              "element": "h1",
              "content": "Decentra Chat",
              "fontSize": "24px",
              "fontWeight": "600",
              "color": "#ffffff",
              "textAlign": "center",
              "marginBottom": "8px"
