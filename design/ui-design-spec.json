            {
              "type": "text",
              "element": "p",
              "className": "subtitle",
              "content": "Decentralized, self-hostable chat",
              "fontSize": "16px",
              "fontWeight": "400",
              "color": "#b9bbbe",
              "textAlign": "center",
              "marginBottom": "20px"
            },
            {
              "type": "input-group",
              "label": "Username",
              "inputType": "text",
              "labelColor": "#b9bbbe",
              "labelSize": "12px",
              "labelWeight": "600",
              "labelTransform": "uppercase",
              "labelSpacing": "0.5px",
              "inputBackground": "#202225",
              "inputBorder": "1px solid #202225",
              "inputBorderRadius": "3px",
              "inputPadding": "10px",
              "inputColor": "#dcddde",
              "focusBorderColor": "#5865F2",
              "marginBottom": "20px"
            },
            {
              "type": "input-group",
              "label": "Password",
              "inputType": "password",
              "labelColor": "#b9bbbe",
              "labelSize": "12px",
              "labelWeight": "600",
              "labelTransform": "uppercase",
              "labelSpacing": "0.5px",
              "inputBackground": "#202225",
              "inputBorder": "1px solid #202225",
              "inputBorderRadius": "3px",
              "inputPadding": "10px",
              "inputColor": "#dcddde",
              "focusBorderColor": "#5865F2",
              "marginBottom": "20px"
            },
            {
              "type": "input-group",
              "label": "Invite Code (leave empty if first user)",
              "inputType": "text",
              "optional": true,
              "labelColor": "#b9bbbe",
              "labelSize": "12px",
              "labelWeight": "600",
              "labelTransform": "uppercase",
              "labelSpacing": "0.5px",
              "inputBackground": "#202225",
              "inputBorder": "1px solid #202225",
              "inputBorderRadius": "3px",
              "inputPadding": "10px",
              "inputColor": "#dcddde",
              "focusBorderColor": "#5865F2",
              "marginBottom": "20px"
            },
            {
              "type": "button-group",
              "gap": "10px",
              "marginTop": "30px",
              "buttons": [
                {
                  "text": "Login",
                  "type": "primary",
                  "background": "#5865F2",
                  "hoverBackground": "#4752C4",
                  "color": "#ffffff",
                  "padding": "10px 16px",
                  "borderRadius": "3px",
                  "fontSize": "14px",
                  "fontWeight": "500"
                },
                {
                  "text": "Sign Up",
                  "type": "secondary",
                  "background": "transparent",
                  "hoverBackground": "rgba(88, 101, 242, 0.1)",
                  "color": "#ffffff",
                  "padding": "10px 16px",
                  "borderRadius": "3px",
                  "fontSize": "14px",
                  "fontWeight": "500"
                }
              ]
            }
          ]
        }
      ]
    },
