            {
              "type": "input-container",
              "padding": "20px",
              "background": "#36393f",
              "form": {
                "display": "flex",
                "gap": "10px",
                "input": {
                  "flex": 1,
                  "padding": "12px",
                  "background": "#40444b",
                  "border": "none",
                  "borderRadius": "8px",
                  "color": "#dcddde",
                  "fontSize": "14px",
                  "placeholder": "Select a channel or DM to start chatting...",
                  "placeholderColor": "#72767d"
                },
                "button": {
                  "background": "#5865F2",
                  "hoverBackground": "#4752C4",
                  "color": "#ffffff",
                  "padding": "10px 16px",
                  "borderRadius": "3px",
                  "fontSize": "14px",
                  "fontWeight": "500",
                  "border": "none"
                }
              }
            }
          ]
