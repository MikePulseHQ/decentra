  "description": "Complete UI design specification for Decentra chat application",
  "colorPalette": {
    "primary": {
      "brand": "#5865F2",
      "brandHover": "#4752C4",
      "brandActive": "#3c45a5"
    },
    "backgrounds": {
      "loginBackground": "#5865F2",
      "authBox": "#36393f",
      "leftSidebar": "#202225",
      "middleSidebar": "#2f3136",
      "chatContainer": "#36393f",
      "inputBackground": "#202225",
      "userSection": "#292b2f",
      "menuBackground": "#18191c"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#dcddde",
      "muted": "#b9bbbe",
      "label": "#96989d"
    },
    "states": {
      "hover": "rgba(79, 84, 92, 0.32)",
      "active": "rgba(79, 84, 92, 0.48)",
